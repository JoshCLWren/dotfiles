# Detect Python version from .python-version or .tool-versions (pyenv compatibility)
_detect_python_version() {
  # Check .python-version first (pyenv standard)
  if [[ -f .python-version ]]; then
    cat .python-version | head -1 | tr -d '[:space:]'
    return 0
  fi

  # Check .tool-versions (asdf/mise compatibility)
  if [[ -f .tool-versions ]]; then
    grep '^python' .tool-versions | awk '{print $2}' | head -1
    return 0
  fi

  # Default fallback
  echo "3.11"
}

# Detect if this is a UV-native project (has uv.lock or tool.uv in pyproject.toml)
_is_uv_native_project() {
  # If uv.lock exists, it's definitely UV-native
  [[ -f uv.lock ]] && return 0

  # Check for [tool.uv] section in pyproject.toml
  [[ -f pyproject.toml ]] && grep -q '^\[tool\.uv\]' pyproject.toml && return 0

  return 1
}

# Detect if project has pyproject.toml with dependencies (might be team-managed)
_has_pyproject_deps() {
  [[ -f pyproject.toml ]] && grep -q '^\[project\]' pyproject.toml
}

# Backward compatibility: _is_uv_project checks for any pyproject.toml with [project]
# This is used by tests and for general "should we use .venv or ~/.venvs?" logic
_is_uv_project() {
  _is_uv_native_project || _has_pyproject_deps
}

# Get the venv path for the current project
# Always use .venv locally for UV compatibility (better performance, auto-detection)
# Use ~/.venvs only for legacy projects without any project metadata
_get_venv_path() {
  if _is_uv_native_project || _has_pyproject_deps; then
    # UV-native or team projects: use .venv for full UV functionality
    echo "$PWD/.venv"
  elif [[ -f requirements.txt ]] || [[ -f requirements.in ]]; then
    # Legacy Python projects with requirements: use .venv for UV speed
    echo "$PWD/.venv"
  else
    # Non-Python or ad-hoc projects: use ~/.venvs
    echo "$HOME/.venvs/${PWD##*/}"
  fi
}

uvenv() {
  # Auto-detect Python version from project files, or use provided argument
  local py="${1:-$(_detect_python_version)}"
  local venv=$(_get_venv_path)

  if [[ "$venv" == "$PWD/.venv" ]]; then
    # Use local .venv for better UV compatibility
    echo "Creating .venv with Python $py..."
    uv venv .venv --python "$py"
    source .venv/bin/activate
  else
    # Use ~/.venvs/ only for ad-hoc/non-Python projects
    local name="${PWD##*/}"
    echo "Creating venv in ~/.venvs/$name with Python $py..."
    mkdir -p ~/.venvs
    uv venv ~/.venvs/"$name" --python "$py"
    source ~/.venvs/"$name"/bin/activate
  fi
}

uvinstall() {
  local venv=$(_get_venv_path)
  local py=$(_detect_python_version)

  # Create venv if it doesn't exist (uses _is_uv_project logic)
  if [[ ! -d "$venv" ]]; then
    echo "Creating venv at $venv with Python $py..."
    if _is_uv_project; then
      uv venv .venv --python "$py"
    else
      mkdir -p ~/.venvs
      uv venv "$venv" --python "$py"
    fi
  fi

  # UV-native projects: use uv sync
  if _is_uv_native_project; then
    echo "ðŸ“¦ UV-native project detected (using uv sync)..."
    # Temporarily unset VIRTUAL_ENV to avoid mismatch warnings
    local old_venv="$VIRTUAL_ENV"
    unset VIRTUAL_ENV

    # Only init if uv.lock is missing AND pyproject.toml looks incomplete
    if [[ ! -f uv.lock ]]; then
      if ! grep -q '^\[project\.dependencies\]' pyproject.toml 2>/dev/null; then
        echo "âš ï¸  No uv.lock found and pyproject.toml looks incomplete."
        echo "   Run 'uv init' manually if you want to initialize this as a UV project."
      fi
    fi

    # Sync dependencies
    if uv sync 2>/dev/null; then
      export VIRTUAL_ENV="$venv"
      source "$venv/bin/activate"
      echo "âœ… Venv activated: $venv"
      return 0
    else
      echo "âš ï¸  uv sync failed, falling back to requirements.txt..."
      export VIRTUAL_ENV="$old_venv"
    fi
  fi

  # Team pyenv projects or legacy: use requirements.txt
  if _has_pyproject_deps && [[ ! -f uv.lock ]]; then
    echo "ðŸ“¦ Team project detected (pyproject.toml without uv.lock)"
    echo "   Using requirements.txt workflow for compatibility..."
  fi

  # Install from requirements files (continue even if some packages fail to build)
  if [[ -f requirements.txt ]]; then
    uv pip install --python "$venv" -r requirements.txt || echo "âš ï¸  Some packages failed to install from requirements.txt"
  fi
  if [[ -f requirements-dev.txt ]]; then
    uv pip install --python "$venv" -r requirements-dev.txt || echo "âš ï¸  Some packages failed to install from requirements-dev.txt"
  fi
  if [[ -f requirements-mikey.txt ]]; then
    uv pip install --python "$venv" -r requirements-mikey.txt || echo "âš ï¸  Some packages failed to install from requirements-mikey.txt"
  fi
  if [[ -f requirements-mikey-dev.txt ]]; then
    uv pip install --python "$venv" -r requirements-mikey-dev.txt || echo "âš ï¸  Some packages failed to install from requirements-mikey-dev.txt"
  fi

  # Activate the venv
  source "$venv/bin/activate"
  echo "âœ… Venv activated: $venv"
}

uvcompile() {
  local pkg="$1"
  if [[ -n "$pkg" ]]; then
    [[ -f requirements.in ]] && uv pip compile requirements.in -o requirements.txt -P "$pkg"
    [[ -f requirements-dev.in ]] && uv pip compile requirements-dev.in -o requirements-dev.txt -P "$pkg"
  else
    [[ -f requirements.in ]] && uv pip compile requirements.in -o requirements.txt
    [[ -f requirements-dev.in ]] && uv pip compile requirements-dev.in -o requirements-dev.txt
  fi
}

uvupdate() {
  local venv=$(_get_venv_path)

  if _is_uv_native_project; then
    # UV-native projects: use uv lock --upgrade
    echo "ðŸ“¦ Updating UV-native project..."
    uv lock --upgrade
    uv sync
  else
    # Team/legacy workflow: compile requirements.in or upgrade requirements.txt
    echo "ðŸ“¦ Updating dependencies (requirements.txt workflow)..."

    if [[ -f requirements.in ]]; then
      # pip-tools workflow: recompile .in files
      uv pip compile requirements.in -o requirements.txt --upgrade
      [[ -f requirements-dev.in ]] && uv pip compile requirements-dev.in -o requirements-dev.txt --upgrade
    fi

    # Install updated dependencies
    [[ -f requirements.txt ]] && uv pip install --python "$venv" -r requirements.txt --upgrade
    [[ -f requirements-dev.txt ]] && uv pip install --python "$venv" -r requirements-dev.txt --upgrade
    [[ -f requirements-mikey.txt ]] && uv pip install --python "$venv" -r requirements-mikey.txt --upgrade
    [[ -f requirements-mikey-dev.txt ]] && uv pip install --python "$venv" -r requirements-mikey-dev.txt --upgrade
  fi

  echo "âœ… Dependencies updated"
}

uvsetup() {
  # Auto-detect Python version, or use provided argument
  uvenv "${1:-$(_detect_python_version)}"
  uvinstall
}

uvnuke() {
  local venv=$(_get_venv_path)
  echo "ðŸ—‘ï¸  Removing venv at $venv..."
  rm -rf "$venv"
  echo "ðŸ”¨ Recreating venv..."
  uvinstall
}

# Auto-activate .venv when entering Python project directories
_auto_activate_venv() {
  local venv_path="$PWD/.venv"

  # Check if .venv exists in current directory
  if [[ -d "$venv_path" ]]; then
    # Check if we're not already in this venv
    if [[ "$VIRTUAL_ENV" != "$venv_path" ]]; then
      # This is a Python project with .venv - activate it
      source "$venv_path/bin/activate"
    fi
  else
    # No .venv here - deactivate if we're in a venv and not in any parent .venv
    if [[ -n "$VIRTUAL_ENV" ]]; then
      # Check if current venv is for a parent directory
      local parent_dir="$PWD"
      local found_parent_venv=0

      while [[ "$parent_dir" != "/" ]]; do
        if [[ "$VIRTUAL_ENV" == "$parent_dir/.venv" ]]; then
          found_parent_venv=1
          break
        fi
        parent_dir="$(dirname "$parent_dir")"
      done

      # Deactivate if the venv isn't for current dir or parent
      if [[ $found_parent_venv -eq 0 ]]; then
        deactivate 2>/dev/null
      fi
    fi
  fi
}

# Register the auto-activation hook
autoload -U add-zsh-hook
add-zsh-hook chpwd _auto_activate_venv

# Run once on shell startup
_auto_activate_venv

# Deduplicate PATH entries while preserving order (must be at the very end)
# This removes duplicates added by tools like pyenv, google-cloud-sdk, rbenv, etc.
typeset -U path
export PATH